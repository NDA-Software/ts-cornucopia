{
    "name": "ts-cornucopia",
    "version": "1.0.1",
    "description": "A package to organize small pieces of code easy to use in many projects.",
    "repository": "git@github.com:HerrTuring/ts-cornucopia.git",
    "author": "Herr Turing <admin@nda.software>",
    "license": "MIT",
    "scripts": {
        "build": "tsc --project ./tsconfig.build.json",
        "lint": "eslint src --ext .ts,.tsx src",
        "lint-fix": "eslint src --ext .ts,.tsx src --fix",
        "test": "jest",
        "indexer": "ts-node ./scripts/indexer.ts",
        "create-mandatory-files": "ts-node ./scripts/createMandatoryFiles.ts"
    },
    "files": [
        ".build"
    ],
    "exports": {
        ".": "./.build/index.js",
        "./file": "./.build/file/index.js",
        "./number": "./.build/number/index.js",
        "./string": "./.build/string/index.js"
    },
    "typesVersions": {
        "*": {
            "file": [
                "./.build/file/index.d.ts"
            ],
            "number": [
                "./.build/number/index.d.ts"
            ],
            "string": [
                "./.build/string/index.d.ts"
            ],
            "*": [
                "./.build/index.d.ts"
            ]
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.2",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-typescript": "^11.1.2",
        "@types/jest": "^29.5.4",
        "@types/node": "^20.5.2",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^38.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.6.3",
        "rollup": "^3.26.2",
        "rollup-plugin-dts": "^5.3.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    },
    "eslintConfig": {
        "extends": [
            "standard-with-typescript"
        ],
        "overrides": [
            {
                "files": [
                    "*.js",
                    "*.jsx",
                    "*.ts",
                    "*.tsx",
                    "*.d.ts",
                    "*.mjs"
                ]
            }
        ],
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "@typescript-eslint/semi": "off",
            "semi": [
                "error",
                "always"
            ],
            "@typescript-eslint/indent": [
                "error",
                4
            ],
            "@typescript-eslint/space-before-function-paren": "off",
            "@typescript-eslint/no-var-requires": "off",
            "curly": "off",
            "@typescript-eslint/member-delimiter-style": "off",
            "prefer-template": "error",
            "nonblock-statement-body-position": [
                "error",
                "below"
            ]
        }
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "endOfLine": "auto"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(j|t)sx?$": "ts-jest"
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/src/",
            "/.build/"
        ]
    }
}
